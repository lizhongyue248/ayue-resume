/* pages/main/main.wxss */

.resume {
  margin: 0 20px;
}

.section {
  padding-bottom: 30px;
}

.section-info {
  display: flex;
  border-bottom: 1px solid #333;
  padding-bottom: 5px;
  margin: 10px 0;
}

.section-seq {
  background: #444;
  width: 22px;
  height: 22px;
  color: white;
  text-align: center;
  line-height: 22px;
  margin-right: 10px;
  font-weight: bold;
  margin-top: 3px;
}

.section-title {
  font-size: 20px;
}

.column {
  font-size: 16px;
  border-bottom: dashed 1px #333;
  padding: 10px 0;
}

.col-2 {
  column-count: 2;
}

.info {
  display: block;
}

.skill {
  padding: 5px 0;
}

.skill-name {
  font-size: 16px;
  display: block;
  margin-bottom: 5px;
}

.education, .project, .skill-info {
  border-bottom: dashed 1px #999;
  padding: 10px 0;
}

.education:last-of-type, .project:last-of-type, .skill-info:last-of-type {
  border-bottom: none;
}

.icon-school {
  width: 26px;
  height: 26px;
  vertical-align: -6px;
  margin-right: 5px;
}

.row {
  display: flex;
  justify-content: space-between;
}

.school, .project-name, .skill-one {
  font-size: 18px;
  margin-bottom: 10px;
  margin-top: 10px;
}

.school:first-of-type, .project-name:first-of-type, .skill-one:first-of-type {
  margin-top: 0;
}

.icon-book {
  width: 16px;
  height: 16px;
  vertical-align: -2px;
  margin-right: 5px;
}

.icon-calendar {
  width: 17px;
  height: 17px;
  vertical-align: -2px;
  margin-right: 5px;
}

.education-info, .project-info {
  font-size: 16px;
  margin-bottom: 10px;
}

.desc, .skill-content {
  color: #999;
  line-height: 1.5;
}

.page {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 16px;
  padding-bottom: 15px;
}

.icon-company, .icon-computer {
  width: 22px;
  height: 22px;
  vertical-align: -4px;
  margin-right: 5px;
}

.icon-job, .icon-github {
  width: 18px;
  height: 18px;
  vertical-align: -3px;
  margin-right: 3px;
}

.icon-github {
  margin-right: 6px;
}

.github {
  margin-top: 5px;
  font-size: 12px;
}

.text-right {
  text-align: right;
}

.text-center {
  text-align: center;
}

.no-wrap {
  white-space: nowrap;
}

.icon-skill {
  width: 18px;
  height: 18px;
  vertical-align: -3px;
  margin-right: 3px;
}

.contact {
  margin: 15px auto;
  width: 300px;
  height: 300px;
  z-index: 1000;
}

.contact-name {
  width: 100%;
  display: block;
  font-size: 20px;
  color: #333;
}

.thanks {
  line-height: 2;
  color: #333;
  margin-top: 15px;
}
